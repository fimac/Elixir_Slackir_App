<div id='message-list' class='row'>
  <%= for message <- @messages do %>
    <p><b><%= message.name %>: </b><%= message.text %></p>
  <% end %>
</div>

<div class='row form-group'>
  <div class='col-md-3'>
    <input type='text' id='name' class='form-control' placeholder='Name' />
  </div>
  <div class='col-md-9'>
    <input type='text' id='text' class='form-control' placeholder='Message' />
  </div>
</div>
